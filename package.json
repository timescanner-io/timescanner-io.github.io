{
  "name": "timescanner-website",
  "version": "1.0.0",
  "description": "Site web de TimeScanner",
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/build.css --minify",
    "watch:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/build.css --watch",
    "build": "npm run build:css && jekyll build",
    "serve": "npm run watch:css & jekyll serve"
  },
  "dependencies": {
    "lucide": "^0.485.0"
  },
  "devDependencies": {
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.17",
    "@tailwindcss/postcss": "^4.0.17"
  }
}
